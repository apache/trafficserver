description	"Apache Traffic Server"

start on virtual-filesystems
stop on runlevel [06]

respawn

pre-start script
	if [ ! -d @exp_runtimedir@ ]; then
		mkdir -p @exp_runtimedir@
		chown @pkgsysuser@:@pkgsysgroup@ @exp_runtimedir@
	fi
end script

exec @exp_bindir@/traffic_manager
